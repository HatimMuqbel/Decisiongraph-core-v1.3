{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "claimpilot/nixpacks.toml"
  },
  "deploy": {
    "startCommand": "cd claimpilot && uvicorn api.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  }
}
